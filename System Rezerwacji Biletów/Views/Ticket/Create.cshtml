@model System_Rezerwacji_Bilet√≥w.ViewModels.TicketViewModel
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="EventID" class="control-label">Event</label>
                <select asp-for="EventID" asp-items="Model.Events" class="form-control"></select>
                <span asp-validation-for="EventID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="price">Price</label>
                <input class="form-control" asp-for="price" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-lable">
                <input class="btn btn-primary" type="submit" value="Create" />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </form>
    </div>
</div>

