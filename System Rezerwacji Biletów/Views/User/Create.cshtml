
@model System_Rezerwacji_Biletów.Models.User
@{ViewData["Title"] = "Create";}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="control-label" asp-for="Name">FirstName</label>
                <input class="form-control" asp-for="Name"/>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="LastName">LastName</label>
                <input class="form-control" asp-for="LastName" />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="BirthDate">Birth Date</label>
                <input class="form-control" asp-for="BirthDate" />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="email">Email</label>
                <input class="form-control" asp-for="email"/>
            </div>
            <div class="form-lable">
                <input class="btn btn-primary" type="submit" value="Create"/>             
            </div
        </form>
    </div>
</div>

